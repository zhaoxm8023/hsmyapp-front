.regist {
  width: 90%;
  margin: auto;
  padding-top: 100px;
    vertical-align: middle;
}

.section {
  margin-top: 20px;
  margin-left: 7px;
  display: flex;
  flex-direction: row;
  width: 95%;
    vertical-align: middle;
}

.section__title {
  width: 15%;
  float: left;
  font-size: 16px;
  line-height: 30px;
  color: #666;
  vertical-align: middle;
  margin-left: 7px;
  
  
}

.section input {
  border: 1px solid #dfdfdf;
  height: 30px;
  line-height: 30px;
  width: 95%;
  padding-left: 2px;
  -webkit-appearance: none;
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
  border-radius: 0;
  -webkit-rtl-ordering: logical;
  cursor: auto;
  background-color: white;
  font-size: 14px;
  vertical-align: middle;
}

.section picker {
  border: 1px solid #dfdfdf;
  height: 30px;
  line-height: 30px;
  width: 95%;
  padding-left: 2px;
  -webkit-appearance: none;
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
  border-radius: 0;
  -webkit-rtl-ordering: logical;
  cursor: auto;
  background-color: white;
  font-size: 14px;
  vertical-align: middle;
}

#button button {
  display: block;
  background: #0e0;
  font-size: 18px;
  line-height: 40px;
  border: 0px;
  color: #fff;
  width: 95%;
  margin: auto;
  margin-top: 20px;
  margin-bottom: 10px;
  border-radius: 5px;
  margin-left: 8px;
}
