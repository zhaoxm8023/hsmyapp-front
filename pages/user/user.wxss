.img-position{
  padding-top:30px;
  padding-left: 15px;
  padding-right:15px;
  padding-bottom: 10px;
}
.button-boder{
  border-radius:100%;
  opacity: 0.5;
}
.navigator {
  padding: 20rpx 30rpx;
  position: relative;
  display: flex;
  align-items: center;
}
.navigator-arrow {
  padding-right: 20rpx;
  margin-left: 30rpx;
  position: relative;
}
.navigator-arrow:after {
  content: " ";
  display: inline-block;
  height: 18rpx;
  width: 18rpx;
  border-width: 2rpx 2rpx 0 0;
  border-color: #888888;
  border-style: solid;
  transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
  position: absolute;
  top: 50%;
  margin-top: -8rpx;
  right: 28rpx;
}
.navigator-text {
  flex: 1;
}