/**
  * 带上 jh-前缀 是为了避免冲突
*/
.jh-tab-bar {
    flex: 1;
    justify-content: space-around;
    width: 100%;
    display: flex;
    flex-direction: row;
    background-color: #F7F7FA;
    border-top: 1px solid #D2D2D2;
    /* 定义在底部 */
    position: fixed;
    bottom: 0;
    left: 0;
}

.jh-tab-item {
    display: inline-block;
    flex-direction: column;
    align-content: center;
    justify-content: center;
    position: relative;
    padding-top: 3px;
    padding-bottom: 2px;
    text-align: center;
}

.jh-tab-content {
    display: inline-block;
    flex-direction: column;
    align-content: center;
    justify-content: center;
    position: relative;
    text-align: center;
}
.jh-tab-icon {
    display: flex;
    justify-content: center;
    align-items: center;  
    flex: 1;
}
image {
    width: 25px;
    height: 25px;
}
.jh-tab-title {
    display: flex;
    font-size: 12px;
    line-height: 16px;
    text-align: center;
}
.img-position{
  padding-top:30px;
  padding-left: 15px;
  padding-right:15px;
  padding-bottom: 10px;
}
.button-boder{
  border-radius:100%;
  opacity: 0.5;
}
.navigator {
  padding: 20rpx 30rpx;
  position: relative;
  display: flex;
  align-items: center;
}
.navigator-arrow {
  padding-right: 20rpx;
  margin-left: 30rpx;
  position: relative;
}
.navigator-arrow:after {
  content: " ";
  display: inline-block;
  height: 18rpx;
  width: 18rpx;
  border-width: 2rpx 2rpx 0 0;
  border-color: #888888;
  border-style: solid;
  transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
  position: absolute;
  top: 50%;
  margin-top: -8rpx;
  right: 28rpx;
}
.navigator-text {
  flex: 1;
}