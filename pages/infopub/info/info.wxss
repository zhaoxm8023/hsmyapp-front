page,
.page,
.page__bd{
    height: 100%;
    background-color:gainsboro;
}
.page__bd{
    padding-bottom: 0;
    padding-top: 10px;
}

.label{
   margin-left: 15px;
}

.picture_list {
   padding: 10rpx;
   margin-left: 12%;
   display: flex;
   flex-direction: row;
   flex-wrap: wrap;
   justify-content: flex-start;
   align-items: flex-start;
   align-content: flex-start;
}
 
.picture_item {
   margin: 10px;
   margin-left: 0;
   position: relative;
   width: 170rpx;
   height: 170rpx;
}
 
.picture_item .del {
   position: absolute;
   top: -11rpx;
   right: -11rpx;
   color: #fff;
   border-radius: 50%;
   width: 40rpx;
   height: 40rpx;
   z-index: 2;
   line-height: 35rpx;
   text-align: center;
   background-color: #f00;
}
 
 
.picture_item image {
   width: 170rpx;
   height: 170rpx;
}

